<div class="container py-5 text-decoration-none">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="card-category my-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/500x100/?food)">
        <h1><%= restaurant.name %></h1>
      </div>
    <% end %>
  <% end %>
</div>
