<div class="banner" style="position: relative; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/1600x900/?restaurant);">
  <%= link_to restaurants_path do %>
    <i class="back fas fa-long-arrow-alt-left" style="position: absolute; font-size: 50px;"></i>
  <% end %>
  <div class="container">
    <h1><%= @restaurant.name %></h1>
    <p>address: <%= @restaurant.address %></p>
    <p>tel: <%= @restaurant.phone_number %></p>
    <!-- <#%= link_to class="btn btn-flat" %>  -->
  </div>
</div>

<div class="container">
  <h1 class="my-5">Reviews</h1>
  <% @reviews.each do |review| %>
  <div class="row my-5 border-bottom d-flex flex-column">
    <div class="mb-5">
      <h4><%= review.content %></h4>
    </div>
    <div>
      <% review.rating.times do %>
      <i class="fas fa-coffee"></i>
      <% end %>
    </div>
  </div>
  <% end %>
